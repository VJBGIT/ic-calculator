            </div>

            <div class="nav-buttons">
                <button class="btn btn-secondary" onclick="prevStep()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M15 18l-6-6 6-6"/></svg>
                    Terug
                </button>
                <button class="btn btn-primary" onclick="showResults()">
                    Bekijk resultaat
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M9 18l6-6-6-6"/></svg>
                </button>
            </div>
        </div>

        <!-- Results -->
        <div class="card step-card hidden" data-step="7">
            <div class="step-header">
                <div class="step-icon">üéâ</div>
                <div>
                    <h2 class="step-title">Jouw resultaat</h2>
                    <p class="step-description">Gebaseerd op artikel 21 van de CAO Dagbladjournalisten</p>
                </div>
            </div>

            <div class="total-score-wrapper">
                <div class="total-score-circle">
                    <div class="total-score-value" id="totalScore">0</div>
                    <div class="total-score-label">punten</div>
                </div>
                <span class="score-tier" id="scoreTier">Berekenen...</span>
            </div>

            <div class="results-grid">
                <div class="result-card">
                    <div class="result-icon days">üèñÔ∏è</div>
                    <div class="result-content">
                        <div class="result-title">Extra vrije dagen per jaar</div>
                        <div class="result-value days" id="extraDays">0 dagen</div>
                    </div>
                </div>
                <div class="result-card">
                    <div class="result-icon salary">üí∞</div>
                    <div class="result-content">
                        <div class="result-title">Salaristoeslag</div>
                        <div class="result-value salary" id="salaryBonus">0%</div>
                    </div>
                </div>
            </div>

            <h3 style="font-family: var(--font-display); margin-bottom: 16px;">Score per onderdeel</h3>
            <div class="breakdown">
                <div class="breakdown-item">
                    <span>üåô Avond- en nachtwerk</span>
                    <span class="breakdown-score" id="bd1">0</span>
                </div>
                <div class="breakdown-item">
                    <span>üîÄ Onregelmatig werk</span>
                    <span class="breakdown-score" id="bd2">0</span>
                </div>
                <div class="breakdown-item">
                    <span>üìÖ Weekendwerk</span>
                    <span class="breakdown-score" id="bd3">0</span>
                </div>
                <div class="breakdown-item">
                    <span>üöó Zakelijke kilometers</span>
                    <span class="breakdown-score" id="bd4">0</span>
                </div>
                <div class="breakdown-item">
                    <span>üè† Afwezigheid van huis</span>
                    <span class="breakdown-score" id="bd5">0</span>
                </div>
                <div class="breakdown-item">
                    <span>üì± Pieperdienst</span>
                    <span class="breakdown-score" id="bd6">0</span>
                </div>
                <div class="breakdown-item total">
                    <span>Totaal</span>
                    <span class="breakdown-score" id="bdTotal">0</span>
                </div>
            </div>

            <div class="restart-section">
                <button class="btn-restart" onclick="restart()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/></svg>
                    Opnieuw berekenen
                </button>
            </div>
        </div>
    </div>

    <script>
        let currentStep = 1;
        const totalSteps = 7;

        // Score calculations
        function calculateScore1() {
            const uren = parseFloat(document.getElementById('avondUren').value) || 0;
            const percentage = uren / 152;
            if (percentage < 0.1) return 0;
            return Math.min(30, Math.ceil(percentage / 0.1) * 6);
        }

        function calculateScore3() {
            const dagen = Math.ceil(parseFloat(document.getElementById('weekendDagen').value) || 0);
            if (dagen === 0) return 0;
            if (dagen === 1) return 8;
            if (dagen <= 3) return 16;
            if (dagen <= 5) return 24;
            if (dagen <= 7) return 32;
            return 40;
        }

        function getRadioValue(name) {
            const selected = document.querySelector(`input[name="${name}"]:checked`);
            return selected ? parseInt(selected.value) : 0;
        }

        function updateScores() {
            const score1 = calculateScore1();
            const score2 = getRadioValue('onregelmatig');
            const score3 = calculateScore3();
            const score4 = getRadioValue('ambulantie');
            const score5 = getRadioValue('afwezigheid');
            const score6 = getRadioValue('pieper');

            document.getElementById('score1').textContent = score1;
            document.getElementById('score2').textContent = score2;
            document.getElementById('score3').textContent = score3;
            document.getElementById('score4').textContent = score4;
            document.getElementById('score5').textContent = score5;
            document.getElementById('score6').textContent = score6;

            return { score1, score2, score3, score4, score5, score6 };
        }

        function updateProgress() {
            const percentage = ((currentStep - 1) / (totalSteps - 1)) * 100;
            document.getElementById('progressLine').style.width = percentage + '%';

            document.querySelectorAll('.step-dot').forEach((dot, index) => {
                const stepNum = index + 1;
                dot.classList.remove('active', 'completed');
                if (stepNum < currentStep) {
                    dot.classList.add('completed');
                    dot.innerHTML = '‚úì';
                } else if (stepNum === currentStep) {
                    dot.classList.add('active');
                    dot.innerHTML = stepNum === 7 ? '‚úì' : stepNum;
                } else {
                    dot.innerHTML = stepNum === 7 ? '‚úì' : stepNum;
                }
            });

            document.querySelectorAll('.step-label').forEach((label, index) => {
                label.classList.toggle('active', index + 1 === currentStep);
            });
        }

        function showStep(step) {
            document.querySelectorAll('.step-card').forEach(card => {
                card.classList.add('hidden');
            });
            const targetCard = document.querySelector(`.step-card[data-step="${step}"]`);
            if (targetCard) {
                targetCard.classList.remove('hidden');
                // Re-trigger animation
                targetCard.style.animation = 'none';
                targetCard.offsetHeight; // Trigger reflow
                targetCard.style.animation = 'slideUp 0.5s ease-out';
            }
            currentStep = step;
            updateProgress();
        }

        function nextStep() {
            if (currentStep < totalSteps) {
                showStep(currentStep + 1);
            }
        }

        function prevStep() {
            if (currentStep > 1) {
                showStep(currentStep - 1);
            }
        }

        function showResults() {
            const scores = updateScores();
            const total = scores.score1 + scores.score2 + scores.score3 + 
                         scores.score4 + scores.score5 + scores.score6;

            // Update breakdown
            document.getElementById('bd1').textContent = scores.score1;
            document.getElementById('bd2').textContent = scores.score2;
            document.getElementById('bd3').textContent = scores.score3;
            document.getElementById('bd4').textContent = scores.score4;
            document.getElementById('bd5').textContent = scores.score5;
            document.getElementById('bd6').textContent = scores.score6;
            document.getElementById('bdTotal').textContent = total;

            // Animate total score
            const totalEl = document.getElementById('totalScore');
            let current = 0;
            const duration = 1000;
            const step = total / (duration / 16);
            const animate = () => {
                current += step;
                if (current < total) {
                    totalEl.textContent = Math.floor(current);
                    requestAnimationFrame(animate);
                } else {
                    totalEl.textContent = total;
                }
            };
            animate();

            // Calculate benefits
            let extraDays = 0;
            if (total >= 21 && total <= 80) extraDays = 3;
            else if (total > 80) extraDays = 5;

            let salaryBonus = '0%';
            if (total >= 31 && total <= 40) salaryBonus = '1%';
            else if (total >= 41 && total <= 60) salaryBonus = '3%';
            else if (total >= 61 && total <= 80) salaryBonus = '5%';
            else if (total > 80) salaryBonus = '7%';

            document.getElementById('extraDays').textContent = extraDays + ' dagen';
            document.getElementById('salaryBonus').textContent = salaryBonus;

            // Score tier
            const tierEl = document.getElementById('scoreTier');
            if (total < 21) {
                tierEl.textContent = 'Standaard werksituatie';
                tierEl.className = 'score-tier tier-low';
            } else if (total <= 50) {
                tierEl.textContent = 'Matige inconveni√´ntie';
                tierEl.className = 'score-tier tier-medium';
            } else {
                tierEl.textContent = 'Hoge inconveni√´ntie';
                tierEl.className = 'score-tier tier-high';
            }

            showStep(7);
        }

        function restart() {
            // Reset all inputs
            document.getElementById('avondUren').value = 0;
            document.getElementById('avondUrenSlider').value = 0;
            document.getElementById('weekendDagen').value = 0;
            document.getElementById('weekendSlider').value = 0;
            
            document.querySelectorAll('input[type="radio"]').forEach(radio => {
                if (radio.value === '0') radio.checked = true;
                else radio.checked = false;
            });

            updateScores();
            showStep(1);
        }

        // Event listeners
        document.getElementById('avondUren').addEventListener('input', function() {
            document.getElementById('avondUrenSlider').value = Math.min(80, this.value);
            updateScores();
        });

        document.getElementById('avondUrenSlider').addEventListener('input', function() {
            document.getElementById('avondUren').value = this.value;
            updateScores();
        });

        document.getElementById('weekendDagen').addEventListener('input', function() {
            document.getElementById('weekendSlider').value = Math.min(8, this.value);
            updateScores();
        });

        document.getElementById('weekendSlider').addEventListener('input', function() {
            document.getElementById('weekendDagen').value = this.value;
            updateScores();
        });

        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', updateScores);
        });

        // Click on progress dots
        document.querySelectorAll('.step-dot').forEach(dot => {
            dot.addEventListener('click', function() {
                const step = parseInt(this.dataset.step);
                if (step < currentStep || (step === 7 && currentStep === 6)) {
                    if (step === 7) {
                        showResults();
                    } else {
                        showStep(step);
                    }
                }
            });
        });

        // Initialize
        updateScores();
        updateProgress();
    </script>
</body>
</html>
